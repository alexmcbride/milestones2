extends ../layout

block content
  h2 Projects
  p
    a(href='/projects/create') Create Project
  ul.list-group
    each project in projects
      li.list-group-item
        a(href='/projects/' + project._id)= project.name
        span &nbsp;|&nbsp;
        a(href='/projects/edit/' + project._id) Edit
        span &nbsp;|&nbsp;
        a(href='/projects/delete/' + project._id) Delete