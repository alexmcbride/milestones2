extends layout

block content
  h2 Projects
  p
    a(href='/create') Create Project
  ul.list-group
    each project in projects
      li.list-group-item
        a(href='/' + project._id)= project.name
        span &nbsp;|&nbsp;
        a(href='/edit/' + project._id) Edit
        span &nbsp;|&nbsp;
        a(href='/delete/' + project._id) Delete